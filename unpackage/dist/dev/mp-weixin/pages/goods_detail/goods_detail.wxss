.container {
  width: 100%;
  background-color: #f7f7f7;
}
.container .bannerbox {
  width: 100%;
}
.container .bannerbox .swiper {
  width: 100%;
}
.container .bannerbox .swiper .swiperimg {
  width: 100%;
}
.container .goodsinfo {
  width: 90%;
  margin: 30rpx auto;
  background-color: white;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  padding: 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.container .goodsinfo .goodsname {
  font-weight: bold;
  font-size: 40rpx;
  width: 100%;
}
.container .goodsinfo .goodsprice {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: orangered;
  font-size: 38rpx;
  margin: 15rpx 0;
}
.container .goodsinfo .goodsprice .pricexian {
  text-decoration: line-through;
  color: #C1C1C1;
  font-size: 26rpx;
  line-height: 55rpx;
  margin-left: 30rpx;
}
.container .goodsinfo .goodsdec {
  width: 100%;
  font-size: 30rpx;
}
.container .goodsinfo .goodsnum {
  width: 300rpx;
  border: 1rpx solid orangered;
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .goodsinfo .goodsnum .addbox {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: orangered;
  color: white;
  text-align: center;
}
.container .goodsinfo .goodsnum .numinput {
  width: 100rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: orangered;
}
.container .goodsinfo .goodsnum .numinput input {
  width: 100%;
  height: 60rpx;
  text-align: center;
}
.container .detaiimgbox {
  width: 90%;
  margin: 30rpx auto;
}
.container .detaiimgbox .drtailimg {
  width: 100%;
}
.container .footbox {
  width: 100%;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.container .footbox .allmoney {
  color: orangered;
  line-height: 70rpx;
}
.container .footbox .btnbox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .footbox .btnbox .buybtn {
  width: 200rpx;
  background-color: orangered;
  color: white;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  margin-left: 10px;
}


